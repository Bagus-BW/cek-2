{
  "root": true,
  "env": {
    "node": true,
    "es2020": true,
    "browser": true
  },
  "extends": ["eslint:recommended", "plugin:vue/vue3-recommended"],
  "ignorePatterns": ["src/**/__tests__/*.js", "src/**/*.test.js"],
  "rules": {
    "no-tabs": 0,
    "vue/multi-word-component-names": "off",
    "no-mixed-spaces-and-tabs": 0,
    "no-unused-vars": "error",
    "indent": "off",
    "curly": "off",
    "semi": "off"
  }
}
